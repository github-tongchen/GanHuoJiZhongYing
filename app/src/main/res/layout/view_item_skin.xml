<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:padding="20dp"
    android:clipChildren="false">

    <ImageView
        android:id="@+id/iv_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:scaleType="center"
        android:src="@drawable/skin_preview_mint_green" />

    <ImageView
        android:id="@+id/iv_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_preview"
        android:layout_alignRight="@id/iv_preview"
        android:layout_marginBottom="-15dp"
        android:layout_marginRight="-15dp"
        android:background="@drawable/ic_checked" />


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_preview"
        android:layout_below="@id/iv_checked"
        android:gravity="center_vertical"
        android:lines="1"
        android:textSize="15sp" />

</RelativeLayout>